<resources>
    <!-- Key codes of gestures. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">143</integer>

    <!-- Default settings for gestures
            0 - Disabled
            1 - Wake device
            2 - Toggle flashlight
            3 - Toggle airplane mode
            4 - Play/Pause music
            5 - Next music
            6 - Previous music
            7 - Open camera
            8 - Open dialer -->
    <integer name="config_doubleTapDefault">1</integer>

    <!-- Whether to to intercept inputs on screen off -->
    <bool name="config_enableKeyHandler">true</bool>

    <!-- Hardware keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant
             16 - Recents
         For example, a device with Home, Back and Recents keys would set this
         config to 19. -->
    <integer name="config_deviceHardwareKeys">19</integer>

    <integer name="config_doubleTapOnHomeBehaviorHwkeys">5</integer>
    <integer name="config_longPressOnAppSwitchBehaviorHwkeys">6</integer>
</resources>
